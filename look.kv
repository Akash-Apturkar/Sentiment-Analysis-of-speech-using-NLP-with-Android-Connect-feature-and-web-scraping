#:import MeshLinePlot kivy.garden.graph.MeshLinePlot
Logic:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint: [1, .8]
            Graph:
                id: graph
                xlabel: ""
                ylabel: "Level"
        BoxLayout:
            size_hint: [1, .2]
            orientation: "horizontal"
            Button:
                text: "START"
                bold: True
                on_press: root.start()
            Button:
                text: "STOP"
                bold: True
                on_press: root.stop()
        BoxLayout:
            size_hint: [1,.2]
            orientation: "horizontal"
            Button:
                text: "EMOTION_REPLAY"
                bold: True
                on_press: root.playback()
            Button:
                text: "REEPLAY"
                bold: True
                on_press: root.voice_play()